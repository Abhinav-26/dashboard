{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": ["vite/client", "vite-plugin-svgr/client", "node"],
        "typeRoots": ["./types", "./node_modules/@types"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        // @TODO: Enable strict when we have a better solution for the type issues
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "react": ["./node_modules/react", "./node_modules/@types/react/index.d.ts",]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.tsx", "dist"]
}
